<%- include('./partials/header') -%>

  <h1>Home</h1>
  <p>
    <%= startingContent %>
  </p>

  <!-- Could also use forEach -->
  <% posts.map(post=> { %>
    <% const truncate=(str, max, suffix)=> str.length < max ? str : `${str.substr(0, str.substr(0, max -
        suffix.length).lastIndexOf(' '))}${suffix}`; %>


    
      <h1>
        <%= post.title %>
      </h1>
    <p>
      <%= truncate(post.content, 100, ' ...') %>
        <a href="/post/<%= post.id %>">Read More</a>
        <% }) %>
          </p>


          <%- include('./partials/footer') -%>